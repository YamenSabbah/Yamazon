<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Yamazon | Store</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/bootstrap.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <script src="/js/JQuery.js"></script>
  </head>
  <body>
    <!--!---------------------------- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow-sm">
      <div class="container">
        <div class="d-flex align-items-center mb-3 mb-md-0">
          <a class="navbar-brand d-flex align-items-center" href="/main">
         <i class="fas fa-shopping-cart mx-1 fs-4" style="rotate: -35deg;"></i>
          <span class="fw-bold">Yamazon</span>
        </a>
        <input type="list" list="categories" id="categorySearch" class="my-1 w-25 search-input">
        <button id="searchBtn" class="btn btn-sm btn-outline-light ms-2">
          <i class="fas fa-search"></i>
        </button>
        <datalist id="categories">
          <% categories.forEach(category => { %>
            <option value="<%= category.name %>"></option>
          <% }) %>
        </datalist>
        </div>
        <div class="d-flex align-items-center ms-auto">
          <div class="balance-display me-4">
            <span class="text-danger small d-block fw-bold">Your Balance</span>
            <span class="balance-amount text-success fw-bold">$<%= balance %></span>
          </div>
          
          <a href="/cart" class="btn position-relative me-3 cart-btn">
            <i class="fas fa-shopping-cart"></i>
            <span class="cart-count position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              <%= cartCount %>
            </span>
          </a>
          
          <div class="user-name me-3 text-white">
            <i class="fas fa-user me-2"></i>
            <span class="fw-bold"><%= user.first_name %> <%= user.last_name %></span>
          </div>
          
          <a href="/logout" class="btn logout-btn">
            <i class="fas fa-sign-out-alt me-1"></i> Logout
          </a>
        </div>
      </div>
    </nav><!--! ------------------ end of navbar -->
    <div class="container my-5">
      <div class="row">
        <div class="col-12 text-center mb-5">
          <h1 class="display-4 fw-bold text-white">Explore Our Store</h1>
          <p class="text-white">Laptops, Mobiles, and Headphones at your fingertips</p>
        </div>
      </div>
      <% categories.forEach(category => { %>
        <section class="mb-5">
          <div class="d-flex align-items-center mb-4">
            <h2 class="h3 fw-bold mb-0 text-white" id="<%= category.name %>"><%= category.name %></h2>
            <div class="category-line ms-3 flex-grow-1"></div>
          </div>
          <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-5">
            <% category.products.forEach(product => { %>
              <div class="col">
                <div class="card h-100 product-card border-0 shadow-sm">
                  <div class="card-img-container p-3">
                    <img src="<%= product.image %>" class="card-img-top img-fluid" alt="<%= product.name %>">
                  </div>
                  <div class="card-body">
                    <h5 class="card-title fw-bold text-white"><%= product.name %></h5>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                      <span class="h4 text-white fw-bold mb-0">$<%= product.price %></span>
                      <form action="/addToCart" method="POST">
                        <!-- <input type="hidden" name="productId" value="<%= product.id %>"> -->
                        <button class="btn add-to-cart" type="button" data-product-id="<%= product.id %>" data-product-price="<%= product.price %>" data-balance="<%= balance %>" data-product-quantity="<%= product.quantity %>">
                          <i class="fas fa-plus me-1"></i> Add to Cart
                        </button>
                      </form>
                    </div>
                    <span class="h6 fw-bold mb-0">Quantity: <span class="prod-qty" data-product-id="<%= product.id %>"><%= product.quantity %></span></span>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </section>
      <% }) %>
    </div>
    <div id="Popup" class="productAdd-popup my-5 my-md-0"></div>
    <footer class="bg-dark text-white py-4 mt-auto">
      <div class="container text-center">
        <p class="mb-0">&copy; 2026 Yamazon. All rights reserved.</p>
      </div>
    </footer>
    <script src="/js/main.js"></script>
    <script>
      $(".add-to-cart").click(async function (e) {
        e.preventDefault();
        const productId = $(this).data("product-id");
        const productPrice = $(this).data("product-price");
        const balance = $(".balance-amount").text().replace("$", "");
        const productQuantity = $(".prod-qty[data-product-id='" + productId + "']").text();
        const res = await fetch("/addToCart", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ productId: productId, productPrice: productPrice, balance: balance, productQuantity: productQuantity }),
        });
        const data = await res.json();
        if (data.success) {
          showPopup(data.message, "success");
          // Update balance in UI
          console.log(data.newBalance);
          $(".balance-amount").text("$" + data.newBalance);
          // // Update quantity for this product in UI
          $(`.prod-qty[data-product-id="${data.productId}"]`).text(data.newQuantity);
          // Update cart count
          $(".cart-count").text(data.cartCount);
        } else {
          showPopup(data.message, "error");
        }
      });
    </script>
   
  </body>
</html>
