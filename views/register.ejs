<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/register.css" />
    <link rel="stylesheet" href="/styles/bootstrap.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
    />
    <script src="/js/JQuery.js"></script>
    <title>Register Page</title>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="header d-flex align-items-center">
          <i
            class="fa-solid fa-cart-shopping mx-2 my-2 fs-2"
            style="color: white; rotate: -15deg"
          ></i>
          <a href="/" class="navbar-brand fw-bold fs-3"
            ><span class="fw-bold">Yamazon</span></a
          >
        </div>
        <div class="col-lg-12">
          <form action="/register" method="POST" class="form-reg p-3 p-md-4">
            <h3 class="text-center fw-bold">Register</h3>
            <div class="i-group d-flex flex-column">
              <label for="fname"><b>First Name</b></label>
              <input
                type="text"
                name="name"
                id="fname"
                placeholder="firstName"
                class="fw-bold"
              />
              <label for="lname"><b>Last Name</b></label>
              <input
                type="text"
                name="name"
                id="lname"
                placeholder="lastName"
                class="fw-bold"
              />
              <label for="email"><b>Email</b></label>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Email"
                class="fw-bold"
              />
              <label for="password"><b>Password</b></label>
              <input
                type="password"
                name="password"
                id="password"
                placeholder="Password"
                class="fw-bold"
              />
            </div>
            <div class="d-flex flex-column">
              <input
                type="submit"
                value="Register"
                class="btn btn-lg mt-1 rounded-pill"
              />

              <p class="text-center mt-1"><b>have an account ?</b></p>
              <a href="/login" class="btn btn-lg w-100 fw-bold rounded-pill"
                >Login</a
              >
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="/js/main.js"></script>
  </body>
</html>
